<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/control_limitededittext_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:hint="你想说的是..."
        android:minLines="5" />
    <TextView
        android:id="@+id/control_limitededittext_maxlen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="25" />
    <TextView
        android:id="@+id/control_limitededittext_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/control_limitededittext_maxlen"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="/" />
    <TextView
        android:id="@+id/control_limitededittext_curlen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/control_limitededittext_sign"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="0" />
</RelativeLayout>
